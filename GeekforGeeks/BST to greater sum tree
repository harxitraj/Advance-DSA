/*
class Node{
    int data;
    Node left;
    Node right;
    Node(int data){
        this.data = data;
        left=null;
        right=null;
    }
} */

class Solution {
    static int sum = 0;
    public static void transformTree(Node root) {
        // code here
        sum = 0;
        convertToGreaterTree(root);
    }

    private static void convertToGreaterTree(Node root) {
        if (root == null) return;

        convertToGreaterTree(root.right);

        int originalVal = root.data;
        root.data = sum;
        sum += originalVal;

        convertToGreaterTree(root.left);
    }
}
