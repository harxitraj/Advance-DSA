class Solution {
    public boolean isBalanced(Node root) {
        // code here
        return height(root) != -1;
    }
    private int height(Node node) {
        if (node == null)
            return 0;

        int left = height(node.left);
        int right = height(node.right);
        if (left == -1)
            return -1;
        if (right == -1)
            return -1;
        if (Math.abs(left - right) > 1)
            return -1;

        return Math.max(left, right) + 1;
    }
}
