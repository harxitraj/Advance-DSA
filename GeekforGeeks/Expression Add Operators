class Solution {
    public ArrayList<String> findExpr(String s, int target) {
        // code here
        ArrayList<String> result = new ArrayList<>();
        if (s == null || s.length() == 0) return result;
        backtrack(result, "", s, target, 0, 0, 0);
        Collections.sort(result);
        return result;
    }

    private void backtrack(ArrayList<String> result, String path, String s, int target, int pos, long eval, long multed) {
        //If we reach the end of string
        if (pos == s.length()) {
            if (eval == target) {
                result.add(path);
            }
            return;
        }

        for (int i = pos; i < s.length(); i++) {
            //Prevent numbers with leading zeros
            if (i != pos && s.charAt(pos) == '0') break;

            String curStr = s.substring(pos, i + 1);
            long cur = Long.parseLong(curStr);

            if (pos == 0) {
                //First number so take it as is
                backtrack(result, curStr, s, target, i + 1, cur, cur);
            } else {
                //Try '+'
                backtrack(result, path + "+" + curStr, s, target, i + 1, eval + cur, cur);
                //Try '-'
                backtrack(result, path + "-" + curStr, s, target, i + 1, eval - cur, -cur);
                //Try '*'
                backtrack(result, path + "*" + curStr, s, target, i + 1, eval - multed + multed * cur, multed * cur);
            }
        }
        
    }
}
