/*
class Node {
    int data;
    Node left, right;

    public Node(int d)
    {
        data = d;
        left = right = null;
    }
}
*/

class Solution {
    public int kthSmallest(Node root, int k) {
        // code here
        Node ans = morris(root,k);
        if (ans != null)
            return ans.data;
        else
            return -1;
        
    }
    Node morris(Node curr, int k){
        while(curr!=null){
            if(curr.left!=null){
                Node prev = curr.left;
                while(prev.right!=null && prev.right!=curr)
                prev = prev.right;
                
                if(prev.right==null){
                    prev.right =curr;
                    curr = curr.left;
                }
                else{
                    prev.right=null;
                    if(k==1)return curr;
                    k--;
                    curr=curr.right;
                }
            }
            else{
                 if(k==1)return curr;
                    k--;
                curr=curr.right;
            }
        }
        return null;
    }
        
}
