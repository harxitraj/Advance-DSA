/*
class Node{
    int data;
    Node left, right;
    Node(int d){
        data=d;
        left=right=null;
    }
}
*/

class Solution {
    int maxPath = Integer.MIN_VALUE;
    int findMaxSum(Node root) {
        // code here
        helper(root);
        return maxPath;
    }
    public int helper(Node root) {
        if(root == null) {
            return 0;
        }
        int leftSum = helper(root.left);
        if(leftSum < 0) {
            leftSum = 0;
        }
        int rightSum = helper(root.right);
        if(rightSum < 0) {
            rightSum = 0;
        }
        maxPath = Math.max(maxPath, root.data+leftSum+rightSum);
        return root.data + Math.max(leftSum, rightSum);
    }
}
