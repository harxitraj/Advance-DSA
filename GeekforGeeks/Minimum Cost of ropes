class Solution {
    public static int minCost(int[] arr) {
        // code here
        if (arr.length <= 1)
            return 0;
        
        PriorityQueue<Integer> pq = new PriorityQueue<>();
        
        for (int rope : arr) {
            pq.add(rope);
        }
        int totalCost = 0;
        while (pq.size() > 1) {
            int first = pq.poll();//Smallest
            int second = pq.poll();//Second smallest

            int cost = first + second;
            totalCost += cost;
            pq.add(cost);
        }
        return totalCost;
    }
}
