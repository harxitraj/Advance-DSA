/*
class Node {
    int data;
    Node left, right;

    Node(int val) {
        this.data = val;
        this.left = null;
        this.right = null;
    }
}
*/
class Solution {
    static class Pair{
        Node node;
        int dist;
        public Pair(Node node, int dist) {
            this.node = node;
            this.dist = dist;
        }
    }
    public ArrayList<Integer> topView(Node root) {
        // code here
        ArrayList<Integer> ans = new ArrayList<>();
        
        TreeMap<Integer, Integer> map = new TreeMap<>();
        Queue<Pair> q = new LinkedList<>();
        q.add(new Pair(root, 0));
        
        while(!q.isEmpty()) {
            Pair curr = q.poll();
            Node node = curr.node;
            int dis = curr.dist;
            
            if(!map.containsKey(dis)) {
                map.put(dis, node.data);
            }
            if(node.left != null) {
                q.offer(new Pair(node.left, dis-1));
            }
            if(node.right != null) {
                q.offer(new Pair(node.right, dis+1));
            }
        }
        for(int val : map.values()) {
            ans.add(val);
        }
        return ans;
    }
}
