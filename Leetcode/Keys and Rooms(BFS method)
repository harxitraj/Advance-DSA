class Solution {
    public boolean canVisitAllRooms(List<List<Integer>> rooms) {
        int n = rooms.size();
        boolean[] vis = new boolean[n];
        Queue<Integer> q = new LinkedList<>();
        int count = 0;
        q.offer(0);
        vis[0] = true;
        while(!q.isEmpty()){
            int node = q.poll();
            count++;
            for(int adjNode : rooms.get(node)){
                if(vis[adjNode] == false){
                    vis[adjNode] = true;
                    q.offer(adjNode);
                }
            }
        }
        if(count == n){
            return true;
        }
        return false;
    }
}
