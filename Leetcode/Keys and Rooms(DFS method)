class Solution {
    public boolean canVisitAllRooms(List<List<Integer>> rooms) {
        int n = rooms.size();
        boolean[] vis = new boolean[n];
        dfs(rooms, vis, 0);
        
        for(int i = 0; i < n; i++) {
            if(vis[i] == false) {
                return false;
            }
        }
        return true;
    }
    public static void dfs(List<List<Integer>> rooms, boolean[] vis, int src) {
        vis[src] = true;
        for(int adjNode : rooms.get(src)) {
            if(vis[adjNode] == false) {
                dfs(rooms, vis, adjNode);
            }
        }
    }
}
