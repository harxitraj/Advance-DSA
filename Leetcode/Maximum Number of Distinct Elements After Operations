class Solution {
    public int maxDistinctElements(int[] nums, int k) {
        Arrays.sort(nums);
        int nextAvailable = Integer.MIN_VALUE;
        int count = 0;

        for (int num : nums) {
            int start = num - k;
            int end = num + k;
            int assign = Math.max(start, nextAvailable);
            if (assign <= end) {
                count++;
                nextAvailable = assign + 1;
            }
        }
        return count;
    }
}
