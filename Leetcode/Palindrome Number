class Solution {
    public boolean isPalindrome(int x) {
        // Special cases
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }

        int reversedHalf = 0;
        while (x > reversedHalf) {
            int digit = x % 10;
            reversedHalf = reversedHalf * 10 + digit;
            x /= 10;
        }

        // For even length no. - reversedHalf == x
        // For odd length no. - reversedHalf / 10 == x (middle digit ignored)
        return x == reversedHalf || x == reversedHalf / 10;
    }
}
