/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int count = 0;
    public int pathSum(TreeNode root, int targetSum) {
        if(root == null) {
            return count;
        }
        helper(root, targetSum);
        return count;
    }
    private void helper(TreeNode node, int targetSum) {
        if(node == null) {
            return;
        }
        helper2(node, targetSum, (long)0);
        helper(node.left, targetSum);
        helper(node.right, targetSum);
    }
    private void helper2(TreeNode node, int targetSum, long currSum) {
        if(node == null) {
            return;
        }
        currSum += node.val;
        if(currSum == targetSum) {
            count++;
        }
        helper2(node.left, targetSum, currSum);
        helper2(node.right, targetSum, currSum);
    }
}
