class Solution {
    public List<List<Integer>> permute(int[] nums) {
        List<List<Integer>> res = new ArrayList<>();
        List<Integer> curr = new ArrayList<>();
        boolean[] visited = new boolean[nums.length];
        helper(nums,curr,res,visited);
        return res;
    }
    private void helper(int [] nums, List<Integer> curr, List<List<Integer>> res, boolean[] visited){
        int n = nums.length;
        if(curr.size()==n){
            List<Integer> ans=new ArrayList<>(curr);
            res.add(ans);
            return;
        }
        for(int i=0;i<n;i++){
            if(visited[i]) continue;
            else{
                visited[i]=true;
                curr.add(nums[i]);
                helper(nums,curr,res,visited);
                visited[i]=false;
                curr.remove(curr.size()-1);
            }
        }
    }
}
