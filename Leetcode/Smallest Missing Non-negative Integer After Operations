class Solution {
    public int findSmallestInteger(int[] nums, int value) {
        int[] freq = new int[value];
        
        for (int num : nums) {
            int rem = ((num % value) + value) % value;
            freq[rem]++;
        }
        
        int mex = 0;
        while (freq[mex % value] > 0) {
            freq[mex % value]--;
            mex++;
        }
        return mex;
    }
        
}
