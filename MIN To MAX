import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int t = scanner.nextInt();

        while (t-- > 0) {
            int n = scanner.nextInt();
            int[] a = new int[n];

            for (int i = 0; i < n; i++) {
                a[i] = scanner.nextInt();
            }

            // Your code goes here
            int minValue = Integer.MAX_VALUE;
            for(int i=0; i<n; i++){
                if(a[i] < minValue){
                    minValue = a[i];
                }
            }
            int numOfOpt = 0;
            for(int i=0; i<n; i++){
                if(a[i] != minValue){
                    a[i] = minValue;
                    numOfOpt ++;
                }
            }
            System.out.println(numOfOpt);
        }
    }
}
